    "type": "library",
    "description": "Symlex core components (Silex with Symfony DI Container)",
    "keywords": [
        "silex",
        "symfony",
        "dependency injection",
        "performance",
        "micro-framework"
    ],
    "license": "MIT",
    "homepage": "https://github.com/lastzero/symlex-core",
    "authors": [
        {
            "name": "Michael Mayer",
            "email": "michael@lastzero.net",
            "homepage": "https://lastzero.net/",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=7.0.0",
        "silex/silex": "~1.2",
        "symfony/symfony": ">=2.8",
        "twig/twig": "~1.12"
    },
    "require-dev": {
        "lastzero/test-tools": "~3.0",
        "phpunit/phpunit": ">=6.0"
    },
    "autoload": {
        "psr-4": { "Symlex\\": "src/" }
