{
    "name": "symlex/symlex-core",
    "description": "A micro-kernel and REST/Twig router components for bootstrapping Silex with the Symfony service container",
    "type": "library",
    "keywords": [
        "silex",
        "symfony",
        "dependency injection",
        "performance",
        "micro-framework",
        "rest"
    ],
    "license": "MIT",
    "homepage": "https://github.com/symlex/symlex-core",
    "authors": [
        {
            "name": "Michael Mayer",
            "email": "michael@lastzero.net",
            "homepage": "https://lastzero.net/",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=7.0",
        "silex/silex": "^2.0",
        "symlex/di-microkernel": "^1.2",
        "symfony/symfony": "^2.8|^3.0",
        "twig/twig": "^1.12"
    },
    "require-dev": {
        "lastzero/test-tools": "^4.0",
        "codacy/coverage": "dev-master"
    },
    "autoload": {
        "psr-4": { "Symlex\\": "src/" }
    },
    "config": {
        "bin-dir": "bin/"
    }
}
